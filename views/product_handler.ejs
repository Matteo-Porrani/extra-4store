<!DOCTYPE html>
<html lang="fr">

<head>
  <%- include('./includes/head') %>
    <title>Extra</title>
</head>

<body>

  <header>
    <%- include('./includes/header') %>
  </header>

  <main>

    <section>
      <div class="container">

        <h2 class="page__title"><i class="ph-plus-circle"></i>Création produit</h2>

        <form action="/product/create" method="POST">

          <div class="two__col">
            <div class="two__col__half">

              <label for="p_form_category">category</label>
              <select name="p_form_category" id="p_form_category">
                <% for (const category of categories) { %>
                  <option value="<%= category.catId %>">
                    <%= category.catName %>
                  </option>
                  <% } %>

              </select>

              <label for="p_form_brand">brand</label>
              <select name="p_form_brand" id="p_form_brand">
                <% for (const brand of brands) { %>
                  <option value="<%= brand.braId %>">
                    <%= brand.braName %>
                  </option>
                  <% } %>
              </select>


              <div style="display: flex; gap: 1rem;">
                <div style="width: 50%;">
                  <label for="p_form_name">name</label>
                  <input type="text" name="p_form_name" id="p_form_name" required>
                </div>

                <div style="width: 50%;">
                  <label for="">price</label>
                  <select name="p_form_price" id="p_form_price">
                    <% for (const price of prices) { %>
                      <option value="<%= price.priId %>">
                        <%= price.priAmount %> €
                      </option>
                      <% } %>
                  </select>
                </div>
              </div>


              <input type="radio" name="p_form_gender" id="p_form_gender" value="M" checked><span>Homme</span>
              <input type="radio" name="p_form_gender" id="p_form_gender" value="W"><span>Femme</span>
              <input type="radio" name="p_form_gender" id="p_form_gender" value="U"><span>Unisex</span>





              <div style="display: flex; gap: 1rem;">
                <div style="width: 50%;">
                  <label for="p_form_souscategory">sous-catégorie</label>
                  <input type="text" name="p_form_souscategory" id="p_form_souscategory">

                </div>
                <div style="width: 50%;">
                  <label for="p_form_code">code</label>
                  <input type="text" name="p_form_code" id="p_form_code" value="123.456.8926">

                </div>
              </div>

              <label for="p_form_description">description</label>
              <textarea rows="3" name="p_form_description"
                id="p_form_description">une description détaillée du produit et de ses caractéristiques principales</textarea>


            </div>

            <div class="two__col__half">


              <div style="display: flex; gap: 1rem;">
                <div style="width: 50%;">
                  <label for="p_form_discount">discount <span class="badge" id="p_form_discount_value">0</span></label>
                  <input type="range" name="p_form_discount" id="p_form_discount" min="0" max="70" step="10" value="0">
                </div>
                <div style="width: 50%;">
                  <label for="p_form_rating">rating <span class="badge" id="p_form_rating_value"></span></label>
                  <input type="range" name="p_form_rating" id="p_form_rating" min="0" max="5" step=".1" value="4.1">
                </div>
              </div>


              <div style="display: flex; gap: 1rem;">
                <div style="width: 30%;">
                  <label>sales</label>
                  <input type="radio" name="p_form_sales" id="p_form_sales" value="Y"><span>Y</span>
                  <input type="radio" name="p_form_sales" id="p_form_sales" value="N" checked><span>N</span>

                </div>
                <div style="width: 30%;">
                  <label>active</label>
                  <input type="radio" name="p_form_active" id="p_form_active" value="Y" checked><span>Y</span>
                  <input type="radio" name="p_form_active" id="p_form_active" value="N"><span>N</span>

                </div>
                <div style="width: 30%;">
                  <label for="p_form_revcount">review count</label>
                  <input type="text" name="p_form_revcount" id="p_form_revcount">
    
                </div>
              </div>





              <label for="p_form_comments">comments</label>
              <textarea rows="3" name="p_form_comments" id="p_form_comments"></textarea>




              <h4>COULEURS</h4>
              <ul style="padding: 0; margin: 0;">
                <% for (const color of colors) { %>
                  <input type="checkbox" name="p_form_color" id="p_form_color" value="<%= color.colId %>"><span>
                    <%= color.colName %>
                  </span>

                  <% } %>
              </ul>

              <h4>TAILLES</h4>
              <ul style="padding: 0; margin: 0;">
                <% for (const size of sizes) { %>
                  <input type="checkbox" name="p_form_size" id="p_form_size" value="<%= size.sizId %>"><span>
                    <%= size.sizName %>
                  </span>

                  <% } %>
              </ul>


              <button class="btn btn--xl" style="display: block; margin-left: auto;">Submit</button>

            </div>

          </div>

        </form>

      </div>
    </section>


  </main>

  <footer>
    <div class="container">
      <small>scripts utilisés sur cette page :</small>
      <ul>
        <li>utils.js</li>
        <li>breadcrumb.js</li>
        <li>product_form.js</li>
      </ul>
    </div>
  </footer>


  <%- include('./includes/scriptlist') %>
    <script src="/js/product_form.js"></script>
</body>

</html>