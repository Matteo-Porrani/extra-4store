<!DOCTYPE html>
<html lang="fr">

<head>
  <%- include('./includes/head') %>
    <title>Extra</title>
</head>

<body>

  <header>
    <%- include('./includes/header') %>
  </header>

  <main>

    <section>
      <div class="container">
        <%- include('./includes/breadcrumb') %>
      </div>
    </section>

    <section>
      <div class="container">
        <!-- <a id="backToGender" class="btn"></a> -->
        <h2 class="page__title">Catégorie</h2>

        <h2>catégorie : <%= categoryName %> (<%= categoryID %>)</h2>
      </div>

    </section>


    <section>
      <div class="container">
        <h3>FILTRES</h3>
        <a class="btn">réinitialiser tous les filtres</a>

        <h4>ORDRE</h4>
        <select name="filterOrder" id="filterOrder" style="width: 50%;">
          <option value="priceDesc">prix : décroissant</option>
          <option value="priceAsc">prix : croissant</option>
          <option value="noteDesc" selected>note : décroissant</option>
          <option value="noteAsc">note : croissant</option>
        </select>

        <h4>PRIX</h4>
        <input class="checkPrices" type="checkbox" data-pricerange="0"><span>0 - 20 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="1"><span>20 - 45 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="2"><span>45 - 75 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="3"><span>75 - 100 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="4"><span>100 - 125 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="5"><span>125 - 160 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="6"><span>160 - 200 €</span>
        <input class="checkPrices" type="checkbox" data-pricerange="7"><span>200 - 300 €</span>


        <h4>COULEURS</h4>
        <!-- MK -- #filterColors -->
        <div id="filterColors"></div>


        <h4>TAILLES</h4>
        <!-- MK -- #filterSizes -->
        <div id="filterSizes"></div>




      </div>
    </section>


    <section>
      <div class="container">
        <h3>produits de la catégorie choisie</h3>

        <ul id="showProducts">
        </ul>

      </div>
    </section>

  </main>

  <footer>
    <div class="container">
      <small>scripts utilisés sur cette page :</small>
      <ul>
        <li>utils.js</li>
        <li>breadcrumb.js</li>
        <li>category_handler.js</li>
        <li>category_filters.js</li>
      </ul>
    </div>
  </footer>


  <%- include('./includes/scriptlist') %>
    <script src="/js/category_handler.js"></script>
    <script src="/js/category_filters.js"></script>
</body>

</html>